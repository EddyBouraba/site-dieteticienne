# Configuration du serveur
PORT=3001
NODE_ENV=development

# URL du frontend (pour CORS)
FRONTEND_URL=http://localhost:5173

# Secret JWT - IMPORTANT: Générez une clé secrète unique en production !
# Utilisez: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION

# Secret CSRF - Clé sécurisée générée cryptographiquement
CSRF_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_IN_PRODUCTION

# Configuration admin par défaut
# Le mot de passe par défaut est "admin123" - à changer immédiatement !
ADMIN_USERNAME=admin
